#!/bin/bash
if [ "$EUID" -ne 0 ]; then
    echo "Você não está executando o script com root ou sudo, por favor execute de novo o com: $0 $1"
    exit 13
fi
while [ true ]
do
OLD="$(cat /tmp/mcpe.txt | grep -v ']')"
read -rp "
Para Sair basta usar CTRL + C
Qual é o Comando? " -e  COMMANDS
screen -S bedrock -p 0 -X stuff "$COMMANDS\n"
LSs="$(cat "/tmp/mcpe.txt" | sed -e "s|$OLD||G" )"
echo "$LSs"
done