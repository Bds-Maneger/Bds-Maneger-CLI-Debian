#!/bin/bash
# Separando
FILESJSON=/etc/bds-manager/install.json
PATH_TO_INSTALL="/etc/BDS-Common/worlds"
ID="$(cat "$FILESJSON" | jq ".gdrive.ID" | sed 's|"||g')"
BACKUP="$(cat "$FILESJSON" | jq ".global.backup_folder" | sed 's|"||g')"
# Separando
DATE="$(TZ=UTC+3 date +"%d@%m@%Y_%H-%M-%S")"
GDRIVEDATE="$(TZ=UTC+3 date +"%d/%m/%Y-%H-%M-%S")"
TM="/tmp/"
GDRIVE_FOLDE=$(gdrive mkdir $GDRIVEDATE -p "$MKDIRID" | sed 's| created||g' | sed 's|Directory ||g')
cd "$PATH_TO_INSTALL/worlds"
zip "$TM/$DATE.zip" -r *
cp "$TM/$DATE.zip" "$BACKUP"
#gdrive upload "$DATE.zip" --parent "$GDRIVE_FOLDE"
rm "$TM/$DATE.zip"